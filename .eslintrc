{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4 ],
        "react/jsx-indent": ["error", 4],
        "react/jsx-one-expression-per-line": 0,
        "react/prop-types": 0,
        "react/destructuring-assignment": 0,
        "arrow-body-style": ["error", "always"]
    }
}